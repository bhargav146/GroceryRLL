<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineGroceryApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineGroceryApp.styles.css" asp-append-version="true" />
    <style>
        body {
            background-image: url('/images/groceryback.jpg');
            background-size: cover;
            background-position: center;
            color: black;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        img {
            width: 100px;
            height: 85px;
            margin-left: 10px;
            border-radius: 100px;
        }

        .container {
            flex: 1;
        }

        footer {
            background-color: #f8f9fa;
            padding: 1rem 0;
            text-align: center;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <img src="~/images/ToZepy_Logo.jpeg" alt="Company Logo" />
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                       



                    </ul>

                    <form method="get" asp-controller="User" asp-action="Search">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" name="query" placeholder="Search" aria-label="Search">
                            <select class="form-select" name="searchType">
                                @*  <option value="ProductId">Product ID</option> *@
                                <option value="ProductName">Product Name</option>
                                @*   <option value="BrandName">Brand Name</option> *@
                            </select>
                            <button class="btn btn-outline-secondary" type="submit">Search</button>
                        </div>
                    </form>
                    <div class="mb-3">
                        <a asp-controller="Admin" asp-action="Logout" class="btn btn-danger">Logout</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            © 2024 - OnlineGroceryApp - <a asp-area="" asp-controller="User" asp-action="Contactus">Contact us</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
