@model IEnumerable<OnlineGroceryApp.Models.Cartitem>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Your Cart</h2>

<table class="table">
    <thead>
        <tr>
            <th>Product Image</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.Product.ProductImage" alt="@item.Product.ProductName" width="100" />
                </td>
                <td>@item.Product.ProductName</td>
                <td>@item.Product.ProductPrice</td>
                <td>@item.Quantity</td>
                <td>@(item.Product.ProductPrice * item.Quantity)</td>
                <td>
                    <form method="post" asp-controller="Cart" asp-action="RemoveFromCart">
                        <input type="hidden" name="id" value="@item.CartId" />
                        <button type="submit" class="btn btn-danger">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
