<form method="post">
    <label for="email">Enter email:</label>
    <input type="email" id="email" name="t1" class="form-control" required  title="Please enter a valid Gmail address." /><br />

    <label for="password">Enter password:</label>
    <input type="password" id="password" name="t2" class="form-control" required /><br />

    <input type="submit" value="Login" class="btn btn-primary" />
</form>

<div class="btn btn-info">
    @Html.ActionLink("New User? Click Here", "Register")
</div>

<div class="btn btn-danger">
    @ViewData["err"]
</div>

<div class="btn btn-warning">
    @Html.ActionLink("Forgot Password?", "ResetPassword")
</div>
