@model IEnumerable<OnlineGroceryApp.Models.Product>

@{
    ViewData["Title"] = "Search Results by Product Name";
}

<h2>Search Results by Product Name</h2>

<label>Enter the product name : </label>
<input type="text" name="name" />
<br />
<input type=button value="Search" />

<table class="table">
    <thead>
        <tr>
            <th>Product Id </th>
            <th>Product Name</th>
            <th>Product Price</th>
            <th>Product Stocks</th>
            <th>Product Image</th>
            <th>Product Description</th>
            <th>Category</th>
            <th>Brand</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.ProductName</td>
                <td>@product.ProductPrice</td>
                <td>@product.ProductStocks</td>
                <td><img src="@product.ProductImage" alt="Product Image" style="width:100px;height:auto;" /></td>
                <td>@product.ProductDescription</td>
                <td>@product.CategoryId</td>
                <td>@product.BrandId/td>
            </tr>
        }
    </tbody>
</table>