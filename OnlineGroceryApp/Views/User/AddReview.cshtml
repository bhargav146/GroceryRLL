@model OnlineGroceryApp.Models.Review

@{
    Layout = "~/Views/Shared/userlayout.cshtml";
}

<h2>Add Review</h2>

@using (Html.BeginForm("AddReview", "User", FormMethod.Post))
{
    @Html.HiddenFor(model => model.OrderId)
    <div class="form-group">
        @Html.LabelFor(model => model.Rating)
        @Html.TextBoxFor(model => model.Rating, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ReviewText)
        @Html.TextAreaFor(model => model.ReviewText, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
}
