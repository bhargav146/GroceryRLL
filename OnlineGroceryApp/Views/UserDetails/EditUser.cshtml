@model OnlineGroceryApp.Models.User
@{
    Layout = "~/Views/Shared/adminlayout.cshtml";
}
<h2>Edit User</h2>

<form asp-action="EditUser">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input type="text" id="Name" name="Name" value="@Model.Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNo"></label>
        <input asp-for="PhoneNo" class="form-control" />
        <span asp-validation-for="PhoneNo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="UserId" />
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="UserDET" asp-controller="User" class="btn btn-secondary">Cancel</a>
</form>
