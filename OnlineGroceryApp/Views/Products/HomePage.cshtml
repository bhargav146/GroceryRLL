@model IEnumerable<OnlineGroceryApp.Models.Product>


@{
    Layout = "~/Views/Shared/adminlayout.cshtml";
}
<h2>Top 10 Most Ordered Items</h2>


<div class="col">
    <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle" type="button" id="categoriesDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Categories
        </button>
        <div class="dropdown-menu" aria-labelledby="categoriesDropdown">
            @foreach (var category in ViewBag.Categories)
            {
                <a class="dropdown-item" asp-controller="Home" asp-action="CategoryProducts" asp-route-id="@category.CategoryId">@category.CategoryName</a>
            }
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Product Image</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Stocks</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>
                            <a asp-controller="Home" asp-action="ProductDetails" asp-route-id="@product.ProductId">
                                <img src="/@product.ProductImage" alt="@product.ProductName" width="100" />

                            </a>
                        </td>
                        <td>@product.ProductName</td>
                        <td>@product.ProductPrice</td>
                        <td>@product.ProductStocks</td>
                    </tr>
                }
            </tbody>
        </table>
