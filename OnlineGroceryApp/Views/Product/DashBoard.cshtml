@model List<OnlineGroceryApp.Models.Order>

@{
    ViewBag.Title = "Orders";
}


@{
    Layout = "~/Views/Shared/adminlayout.cshtml";
}

<h2>Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>User</th>
            <th>Product</th>
            <th>Quantity</th>
            <th>Order Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.User.Name</td> <!-- Adjust property names as per your model -->
                <td>@order.Product.ProductName</td> <!-- Adjust property names as per your model -->
                <td>@order.OrderQty</td>
                <td>@order.OrderDate</td>
                <td>
                    <form asp-action="Delete" asp-controller="Order" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@order.OrderId" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
