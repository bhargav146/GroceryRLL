@model OnlineGroceryApp.Models.Product
@{
    Layout = "~/Views/Shared/adminlayout.cshtml";
}
@{
    ViewBag.Title = "Add New Product";
}

<h2>Add New Product</h2>

<form asp-action="InsertProduct" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ProductPrice"></label>
        <input asp-for="ProductPrice" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ProductStocks"></label>
        <input asp-for="ProductStocks" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ProductDescription"></label>
        <textarea asp-for="ProductDescription" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <input asp-for="CategoryId" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="BrandId"></label>
        <input asp-for="BrandId" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ProductImage">Product Image</label>
        <input asp-for="ProductImage" type="file" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Add Product</button>
</form>
